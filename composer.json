{
    "name": "devuri/wpframework",
    "type": "library",
    "description": "Effortlessly develop scalable WordPress applications that support multiple tenants from a single installation.",
    "keywords": [
        "wp",
        "wordpress",
        "wp-config",
        "environment",
        "configuration",
        "config",
        "env",
        "dotenv",
        "dotenv",
        "multi-tenant",
        "multitenant",
        "devuri"
    ],
    "homepage": "https://github.com/devuri/wpframework",
    "license": "MIT",
    "minimum-stability": "dev",
    "prefer-stable": true,
    "authors": [
        {
            "name": "Uriel Wilson",
            "email": "support@urielwilson.com",
            "homepage": "https://urielwilson.com",
            "role": "Developer"
        }
    ],
    "support": {
        "source": "https://github.com/devuri/wpframework",
        "issues": "https://github.com/devuri/wpframework/issues"
    },
    "require": {
        "php": "^7.4 || ^8.0",
        "devuri/dot-access": "^0.3",
        "devuri/http": "^0.1",
        "devuri/env": "^0.3",
        "devuri/secure-password": "^0.1",
        "devuri/uuid-generator": "^0.0.1",
        "devuri/config": "^0.1",
        "filp/whoops": "^2.15",
        "symfony/error-handler": "5.0.11",
        "symfony/filesystem": "^5.4",
        "symfony/var-dumper": "^5.4",
        "vlucas/phpdotenv": "^5.2"
    },
    "require-dev": {
        "10up/phpcs-composer": "dev-master",
        "brain/monkey": "^2.6",
        "php-stubs/wordpress-stubs": "^6.0",
        "phpbench/phpbench": "^1.2",
        "phpstan/phpstan": "^1.8",
        "phpstan/phpstan-strict-rules": "^1.3",
        "phpunit/phpunit": "^9.5",
        "spatie/ssh": "^1.9",
        "szepeviktor/phpstan-wordpress": "^1.1",
        "vimeo/psalm": "^4.24 || ^5.0",
        "yoast/phpunit-polyfills": "^1.0 || ^2.0 || ^3.0"
    },
    "autoload": {
        "files": [
            "src/inc/helpers.php"
        ],
        "psr-4": {
            "WPframework\\": "src/Component"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/"
        }
    },
    "scripts": {
        "wpcs": "composer wpcs-lint",
        "wpcs-all": "composer wpcs-lint-all",
        "wpcs-lint": [
            "composer install -q",
            "phpcs -ns src"
        ],
        "wpcs-lint-all": [
            "composer install -q",
            "phpcs -s src"
        ],
        "wpcs-fix": [
            "composer install -q",
            "phpcbf src"
        ],
        "test": [
            "composer install -q",
            "vendor/bin/phpunit",
            "composer no-dev -q"
        ],
        "test-covers": [
            "@putenv XDEBUG_MODE=coverage",
            "composer install -q",
            "vendor/bin/phpunit --coverage-html coverage-report",
            "composer no-dev -q"
        ],
        "lint": [
            "composer install -q",
            "composer audit",
            "composer psalm-secure",
            "composer psalm",
            "composer phpstan",
            "composer no-dev -q"
        ],
        "build": [
            "composer install -q",
            "composer validate",
            "composer show --tree",
            "composer test",
            "composer wpcs-lint",
            "composer lint",
            "composer install -q",
            "composer phpdoc -q",
            "composer test",
            "composer test-covers",
            "composer lint",
            "composer no-dev -q"
        ],
        "phpstan": "@php ./vendor/bin/phpstan analyse",
        "psalm": "vendor/bin/psalm",
        "phpdoc": "@php ./bin/phpdoc",
        "phpdoc-v": "@php ./bin/phpdoc -vvv",
        "psalm-secure": "vendor/bin/psalm --taint-analysis",
        "psalm-info": "vendor/bin/psalm --show-info=true",
        "psalm-fix-return": "vendor/bin/psalm --alter --issues=MissingReturnType",
        "psalm-autofix": [
            "composer install -q",
            "vendor/bin/psalm --alter --issues=InvalidNullableReturnType,MismatchingDocblockReturnType,InvalidReturnType,InvalidFalsableReturnType,LessSpecificReturnType,MissingParamType"
        ],
        "codefix": [
            "composer php-cs-fixer",
            "composer no-dev -q"
        ],
        "php-cs-fixer": [
            "composer require --dev friendsofphp/php-cs-fixer ^3.13 -q",
            "vendor/bin/php-cs-fixer fix",
            "composer remove --dev friendsofphp/php-cs-fixer -q",
            "composer install --no-dev -q"
        ],
        "no-dev": "composer install --no-dev"
    },
    "extra": {
        "wordpress-install-dir": "public/wp"
    },
    "config": {
        "optimize-autoloader": true,
        "preferred-install": "dist",
        "sort-packages": true,
        "allow-plugins": {
            "johnpbloch/wordpress-core-installer": true,
            "dealerdirect/phpcodesniffer-composer-installer": true
        }
    }
}
