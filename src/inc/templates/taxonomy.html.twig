{% extends "base.html.twig" %}

{% block content %}
<h1>{{ taxonomy.name }}</h1>
<p>{{ taxonomy.description }}</p>
<ul>
    {% for post in taxonomy.posts %}
        <li>
            <a href="{{ post.url }}">{{ post.title }}</a>
            <p>{{ post.excerpt }}</p>
        </li>
    {% endfor %}
</ul>
{% endblock %}