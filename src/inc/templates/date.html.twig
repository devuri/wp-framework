{% extends "base.html.twig" %}

{% block content %}
<h1>Posts from {{ date.year }}{% if date.month %}/{{ date.month }}{% endif %}{% if date.day %}/{{ date.day }}{% endif %}</h1>
<ul>
    {% for post in date.posts %}
        <li>
            <a href="{{ post.url }}">{{ post.title }}</a>
            <p>{{ post.excerpt }}</p>
        </li>
    {% endfor %}
</ul>
{% endblock %}