{% extends "base.html.twig" %}

{% block content %}
<h1>Search Results for "{{ search_query }}"</h1>
{% if search_results %}
    <ul>
        {% for result in search_results %}
            <li>
                <a href="{{ result.url }}">{{ result.title }}</a>
                <p>{{ result.excerpt }}</p>
            </li>
        {% endfor %}
    </ul>
{% else %}
    <p>No results found for "{{ search_query }}".</p>
{% endif %}
{% endblock %}